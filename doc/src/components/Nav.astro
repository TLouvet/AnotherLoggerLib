---
const withBase = (l: string) => `/ColorLogger${l}`;
const links = [
  {
    href: '/',
    label: 'About',
  },
  {
    href: '/api',
    label: 'Logger Levels',
  },
  {
    href: '/configuration',
    label: 'Configuration',
  },
  {
    href: '/colors',
    label: 'Colors',
  },

  {
    href: '/generator',
    label: 'Configuration Generator',
  },
];
---

<div class='menu'>
  <button class='menu-button' aria-label='Toggle menu'> â˜° </button>
  <aside class='sidebar'>
    <nav>
      <h1>Color Logger</h1>
      <hr />
      <ul>
        {
          links.map((link) => (
            <li>
              <a href={withBase(link.href)}>{link.label}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </aside>
</div>

<script>
  // Ajoute la logique pour ouvrir/fermer le menu
  document.querySelector('.menu-button')?.addEventListener('click', () => {
    document.querySelector('.sidebar')?.classList.toggle('open');
  });
</script>

<style>
  .app {
    display: flex;
  }

  /* Bouton pour ouvrir/fermer le menu */
  .menu-button {
    position: fixed;
    top: 10px;
    left: 10px;
    background-color: #10120f;
    color: #fd8b2e;
    border: 2px solid #fd8b2e;
    padding: 10px 15px;
    font-size: 1.2rem;
    cursor: pointer;
    z-index: 1000;
    border-radius: 5px;
    transition:
      background-color 0.3s,
      color 0.3s;
  }

  .menu-button:hover {
    background-color: #fd8b2e;
    color: #10120f;
  }

  aside {
    width: 320px;
    color: white;
    display: flex;
    flex-direction: column;
    padding: 20px;
  }

  @media screen and (width < 1200px) {
    aside {
      width: 250px;
    }
  }

  nav ul {
    padding: 0;
    padding-top: 30px;
    list-style: none;
  }

  nav ul li a {
    color: white;
    display: block;
    padding: 10px;
    text-decoration: none;
    font-size: 1.1rem;
    transition: color 0.3s;
  }

  nav ul li a:hover {
    background-color: #555;
    color: #ff8728;
  }
</style>

<style>
  .app {
    display: flex;
  }

  /* Sidebar */
  .sidebar {
    display: flex;
    flex-direction: column;

    height: 100%;
    width: 320px;
    background-color: #222;
    color: white;
    display: flex;
    flex-direction: column;
    padding: 20px;
    box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
    z-index: 999;
    transition: left 0.3s ease-in-out;
  }

  .sidebar.open {
    left: 0;
  }

  .sidebar nav ul {
    padding: 0;
    padding-top: 30px;
    list-style: none;
  }

  .sidebar nav ul li a {
    color: white;
    display: block;
    padding: 10px;
    text-decoration: none;
    font-size: 1.1rem;
    transition:
      color 0.3s,
      background-color 0.3s;
  }

  .sidebar nav ul li a:hover {
    background-color: #555;
    color: #ff8728;
  }

  .menu-button {
    position: fixed;
    top: 10px;
    left: 10px;
    background-color: #10120f;
    color: #fd8b2e;
    border: 2px solid #fd8b2e;
    padding: 10px 15px;
    font-size: 1.2rem;
    cursor: pointer;
    z-index: 1000;
    border-radius: 5px;
    transition:
      background-color 0.3s,
      color 0.3s;
    display: none;
  }

  .menu-button:hover {
    background-color: #fd8b2e;
    color: #10120f;
  }

  @media screen and (max-width: 991px) {
    .menu-button {
      display: block;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: -360px;
    }

    .sidebar.open {
      left: 0;
    }
  }
</style>
